@model ShopApp.WebUI.Models.OrderModel
@{
    ViewData["Title"] = "CheckOut";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>CheckOut</h1>
<hr />

<div class="row">
    <div class="col-md-8">
        <h4 class="mb-3">Order Details</h4>
        <form action="/" method="post">
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="@Model.FirstName"></label>
                    <input asp-for="@Model.FirstName" name="firstname" value="" class="form-control" />
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="@Model.LastName"></label>
                    <input asp-for="@Model.LastName" name="lastname" value="" class="form-control" />
                </div>
            </div>
            <div class="col-md-6 mb-3">
                <label asp-for="@Model.Address" ></label>
                <textarea asp-for="@Model.Address" class="form-control" />
            </div>
            <div class="row">
                <div class="col-md-4 mb-3">
                    <label asp-for="@Model.City"></label>
                    <input asp-for="@Model.City" name="city" value="" class="form-control" />
                </div>
                <div class="col-md-4 mb-3">
                    <label asp-for="@Model.Phone" ></label>
                    <input asp-for="@Model.Phone" name="phone" value="" class="form-control" />
                </div>
                <div class="col-md-4 mb-3">
                    <label asp-for="@Model.Email"></label>
                    <input asp-for="@Model.Email" name="email" value="" class="form-control" />
                </div>
            </div>
            <hr class="mb-4" />
            <div class="custom-group custom-check">
                <input type="checkbox" class="custom-check-input" id="save-info">
                <label class="custom-check-label" for="save-info">Save</label>
            </div>
            <hr class="mb-4" />
            <div class="d-block my-3">
                <div class="custom-group custom-check">
                    <input type="radio" name="paymentMethod" class="custom-check-input" id="credit">
                    <label class="custom-check-label" for="credit">Credit</label>
                </div>
                <div class="custom-group custom-radio">
                    <input id="paypal" name="paymentMethod" type="radio" class="custom-check-input">
                    <label class="custom-check-label" for="eft">EFT</label>
                </div>
            </div>
            <h4 class="mb-3">Payment</h4>
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="@Model.CardName"></label>
                    <input asp-for="@Model.CardName" name="cardname" value="" class="form-control" />
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="@Model.CartNumber"></label>
                    <input asp-for="@Model.CartNumber" name="cardnumber" value="" class="form-control" />
                </div>
            </div>
            <div class="row">
                <div class="col-md-4 mb-3">
                    <label asp-for="@Model.ExpirationMonth"></label>
                    <input asp-for="@Model.ExpirationMonth" name="month" value="" class="form-control" />
                </div>
                <div class="col-md-4 mb-3">
                    <label asp-for="@Model.ExpirationYear"></label>
                    <input asp-for="@Model.ExpirationYear" name="year" value="" class="form-control" />
                </div>
                <div class="col-md-4 mb-3">
                    <label asp-for="@Model.CVV">CVV</label>
                    <input asp-for="@Model.CVV" name="cvv" value="" class="form-control" />
                </div>
            </div>
            <hr class="mb-4" />
            <button type="submit" class="btn btn-primary btn-lg btn-block">Complate Order</button>
        </form>
    </div>
    <div class="col-md-4 mb-4">
        <h4 class="mb-3">
            <span class="text-muted">Your Cart</span>
        </h4>
        <ul class="list-group mb-3">
            @foreach (var item in Model.CartModel.CartItems)
            {
                <li class="list-group-item d-flex justify-content-between">
                    <div>
                        <h6 class="my-0">@item.Name
                        <small>x @item.Quantity</small></h6>
                    </div>
                    <span class="text-muted"> @item.Price</span>
                </li>
            }

            <li class="list-group-item d-flex justify-content-between">
                <span>Total (TL)</span>
                <strong> @Model.CartModel.TotalPrice()</strong>
            </li>
        </ul>

    </div>
</div>
