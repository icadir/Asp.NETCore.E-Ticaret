
@{
    ViewData["Title"] = "CheckOut";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>CheckOut</h1>
<hr />

<div class="row">
    <div class="col-md-8">
        <h4 class="mb-3">Order Details</h4>
        <form action="/" method="post">
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label>First Name</label>
                    <input type="text" name="firstname" value="" class="form-control" />
                </div>
                <div class="col-md-6 mb-3">
                    <label>Last Name</label>
                    <input type="text" name="lastname" value="" class="form-control" />
                </div>
            </div>
            <div class="col-md-6 mb-3">
                <label>Address</label>
                <textarea name="address" class="form-control" />
            </div>
            <div class="row">
                <div class="col-md-4 mb-3">
                    <label>City</label>
                    <input type="text" name="city" value="" class="form-control" />
                </div>
                <div class="col-md-4 mb-3">
                    <label>Phone</label>
                    <input type="text" name="phone" value="" class="form-control" />
                </div>
                <div class="col-md-4 mb-3">
                    <label>Email</label>
                    <input type="text" name="email" value="" class="form-control" />
                </div>
            </div>
            <hr class="mb-4" />
            <div class="custom-group custom-check">
                <input type="checkbox" class="custom-check-input" id="save-info">
                <label class="custom-check-label" for="save-info">Save</label>
            </div>
            <hr class="mb-4" />
            <div class="d-block my-3">
                <div class="custom-group custom-check">
                    <input type="radio" name="paymentMethod" class="custom-check-input" id="credit">
                    <label class="custom-check-label" for="credit">Credit</label>
                </div>
                <div class="custom-group custom-radio">
                    <input id="paypal" name="paymentMethod" type="radio" class="custom-check-input">
                    <label class="custom-check-label" for="eft">EFT</label>
                </div>
            </div>
            <h4 class="mb-3">Payment</h4>
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label>Name Of Credit Card</label>
                    <input type="text" name="cardname" value="" class="form-control" />
                </div>
                <div class="col-md-6 mb-3">
                    <label>Credit Card Number</label>
                    <input type="text" name="cardnumber" value="" class="form-control" />
                </div>
            </div>
            <div class="row">
                <div class="col-md-4 mb-3">
                    <label>Month</label>
                    <input type="text" name="month" value="" class="form-control" />
                </div>
                <div class="col-md-4 mb-3">
                    <label>Year</label>
                    <input type="text" name="year" value="" class="form-control" />
                </div>
                <div class="col-md-4 mb-3">
                    <label>CVV</label>
                    <input type="text" name="cvv" value="" class="form-control" />
                </div>
            </div>
            <hr class="mb-4" />
            <button type="submit" class="btn btn-primary btn-lg btn-block">Complate Order</button>
        </form>
    </div>
    <div class="col-md-4 mb-4">
        <h4 class="mb-3">
            <span class="text-muted">Your Cart</span>
        </h4>
        <ul class="list-group mb-3">
            <li class="list-group-item d-flex justify-content-between">
                <div>
                    <h6 class="my-0">Product Name</h6>
                    <small class="text-muted">Description</small>
                </div>
                <span class="text-muted"> 1000 TL</span>
            </li>
            <li class="list-group-item d-flex justify-content-between">
                <div>
                    <h6 class="my-0">Product Name</h6>
                    <small class="text-muted">Description</small>
                </div>
                <span class="text-muted"> 1000 TL</span>
            </li>
            <li class="list-group-item d-flex justify-content-between">
              <span>Total (TL)</span>
                <strong > 2000 TL</strong>
            </li>
        </ul>

    </div>
</div>
